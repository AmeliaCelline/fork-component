          "instillUpstreamTypes": ["value", "reference", "template"],
          "title": "Email",
          "type": "string"
        },
        "email-type": {
          "enum": ["none", "HOME", "WORK"],
          "example": "none",
          "description": "Email type of the contact. If there is no email, pick none.",
          "instillAcceptFormats": ["string"],
          "instillUIMultiline": false,
          "instillUIOrder": 8,
          "instillUpstreamTypes": ["value", "reference", "template"],
          "title": "Email Type",
          "type": "string"
        },
        "birthday": {
          "description": "Birthday of the contact. Format is in 'YYYY-MM-DD'.",
          "instillAcceptFormats": ["string"],
          "instillUIMultiline": false,
          "instillUIOrder": 9,
          "instillUpstreamTypes": ["value", "reference", "template"],
          "title": "Birthday",
          "type": "string"
        }
      },
