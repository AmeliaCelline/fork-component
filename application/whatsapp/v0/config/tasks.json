          "$ref": "#/$defs/input/template/name",
          "instillUIOrder": 2
        },
        "language-code": {
          "$ref": "#/$defs/input/template/language-code",
          "instillUIOrder": 3
        },
        "header-parameters": {
          "description": "Specify the parameters for the header section of the template. Leave this blank if there is no parameter.",
          "instillUIOrder": 4,
          "title": "Header Parameters",
          "type": "array",
          "instillFormat": "array:string",
          "items": {
            "title": "Header Parameter",
            "type": "string",
            "description": "Header parameter",
            "instillFormat": "string"
          }
        },
        "body-parameters": {
          "$ref": "#/$defs/input/template/body-parameters",
          "instillUIOrder": 5

        },
        "button-parameters": {
          "$ref": "#/$defs/input/template/button-parameters",
          "instillUIOrder": 6
        }
      },
      "required": [
        "phone-number-id",
        "to",
        "name",
        "language-code"
      ],
      "title": "Input",
      "type": "object"
    },
    "output": {
      "description": "API response",
      "instillUIOrder": 0,
      "properties": {
        "recipient-wa-id": {
          "$ref": "#/$defs/output/recipient-wa-id"
        },
        "message-id": {
          "$ref": "#/$defs/output/message-id"
        },
        "message-status": {
          "$ref": "#/$defs/output/message-status"
        }
      },
      "required": ["recipient-wa-id", "message-id", "message-status"],
      "title": "Output",
      "type": "object"
    }
  },
